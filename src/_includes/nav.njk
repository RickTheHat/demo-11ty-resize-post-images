{% set currentUrl %}{{ page.url }}{% endset %}

<nav>
  <ul role="list">
    <li>
      <a {% if currentUrl === '/' %} aria-current="page" {% endif %} href="/">Home</a>
    </li>

    {% for page in collections.pages %}
      <li>
        <a {% if currentUrl.indexOf(page.url) > -1 %} aria-current="page" {% endif %} href="{{ page.url }}">
          {{ page.data.title }}
        </a>
      </li>
    {%- endfor %}
  </ul>
</nav>